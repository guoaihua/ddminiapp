/* sport/sport/sport.wxss */
page {
    overflow: hidden;
  }
.container {
    width: 100%;
    height: 100%;
    background: #F8D7A2;
    overflow: hidden;
  }
  
.cont {
  width: 83%;
  height: 90%;
  padding: 0px 8.5%;
  position: absolute;
  top: 9.5%;
  background-color: #ffffff;
  border-top-left-radius: 16px;
  border-top-right-radius: 16px;
  display: flex;
flex-direction: column;
justify-content: space-around;
}  

.c_title {
    text-align: center;
  }
  .gamename {
  font-family: "zihun144";
  font-style: normal;
  font-weight: normal;
  font-size: 24px;
  line-height: 29px;
  text-align: center;
  color: #2A2D32;
  margin-bottom: 3%;
  }
  
  .gametips {
    font-family: Source Han Sans CN;
  font-style: normal;
  font-weight: 500;
  font-size: 16px;
  line-height: 24px;
  letter-spacing: -0.3px;
  color: #2A2D32;
  opacity: 0.8;
  }
  

  .c_btn {
    padding: 18px 92px;
    background: #D458FF;
    box-shadow: 0px 10px 20px rgba(212, 88, 255, 0.2);
    border-radius: 100px;
  text-align: center;
  font-family: "zihun144";
  font-style: normal;
  font-weight: normal;
  font-size: 24px;
  line-height: 24px;
  color: #FFFFFF;
  }

  .c_animation {
      width: 100%;
      display: flex;
      justify-content: space-between;
  }
  .c_animation .left,.c_animation .right {
      width: 46.15%;
      padding-bottom: 98.7%;
        position: relative;
        display: flex;
justify-content: center;

  }

  .c_animation .left {
    background: #FF5348;
    border-radius: 10px;
  }

  .left image {
      width: 166px;
      height: 197px;
      position: absolute;
      top: 15%;
  }



  .c_animation .right {
    background: #33B6FF;
    border-radius: 10px;
  }

  .right image {
    width: 126px;
    height: 174px;
    position: absolute;
    top: 10%;
}


.right>view, .left>view {
    position: absolute;
    font-size: 36px;
line-height: 43px;
text-align: center;
font-family: "zihun144";

color: #FFFFFF;
bottom: 16%;
}

.right>view:nth-child(1), .left>view:nth-child(1) {
    position: absolute;
    font-family: Source Han Sans CN;
    font-style: normal;
    font-weight: 500;
    font-size: 16px;
    line-height: 24px;
    top: 10%;
    align-items: center;
    text-align: center;
    letter-spacing: -0.3px;
    
    color: #FFFFFF;

    opacity: 0;
    z-index: 99;
}

.c_animation.sport .left {
    animation: flicker 0.5s 5  forwards,left 0.5s 2.5s forwards;
}

.c_animation.sport .right {
    animation: flicker 0.5s 5 0.25s forwards,right 0.5s 2.5s forwards;
}
.c_animation.rest .left {
    animation: flicker 0.5s 5 0.25s forwards,right 0.5s 2.5s forwards;
}

.c_animation.rest .right {
    animation: flicker 0.5s 5  forwards,left 0.5s 2.5s forwards;
}

.showsport .left{
    animation: left 0.3s forwards
}

.showsport .left>view:nth-child(1) {
    opacity: 0.8;
}


.showsport .right{
    animation: right 0.3s forwards
}

.showrest .left{
    animation: right 0.3s forwards
}
.showrest .right{
    animation: left 0.3s forwards
}

.c_animation.rest .right>view:nth-child(1),.c_animation.sport .left>view:nth-child(1){
    opacity: 0.8;
    transition: opacity 1s ease-in-out 2.5s;
}



.showrest .right>view:nth-child(1) {
    opacity: 0.8;
}

@keyframes flicker {
    0%{
        opacity: 1;
    }
    50% {
        opacity: 0;
    }
    100% {
        opacity: 1;
    }
}

@keyframes left{
    100% {
        opacity: 1;
        width: 100%;
    }
}

@keyframes right{
    100% {
        width: 0;
        opacity: 0;
        display: none!important;
    }
}

.disable {
    opacity: 0.5;
    padding: 18px 43px;
  }