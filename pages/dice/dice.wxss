/* pages/coin/coin.wxss */
.container {
    width: 100%;
    height: 100%;
    background: #F8D7A2;
    overflow: hidden;
  }
  
.cont {
  width: 83%;
  padding: 39px 8.5% 200px;
  position: absolute;
  top: 35.5%;
  background-color: #ffffff;
  border-top-left-radius: 16px;
  border-top-right-radius: 16px;
  animation: ease-in-out 0.5ms ;

}  

.c_title {
  text-align: center;
  z-index: 100;
}
.gamename {
font-family: "zihun144";
font-style: normal;
font-weight: normal;
font-size: 24px;
line-height: 29px;
text-align: center;
color: #2A2D32;
}

.gametips {
  font-family: Source Han Sans CN;
font-style: normal;
font-weight: 500;
font-size: 16px;
line-height: 24px;
letter-spacing: -0.3px;
color: #2A2D32;
opacity: 0.8;
}


.c_animation {
  text-align: center;
  min-height: 57.4%;
  position: relative;
}
.c_animation .dice_default{
  width: 88px;
  height: 94px;
  top: 65.6%;
  left: 50%;
  transform: translateX(-50%);
}

.c_animation .dices {
  position: relative;
  padding-bottom: 107%;
}
.c_animation .dices image {
  position: absolute;
}

.c_animation .nums-2 .num-1 {
  top: 62.3%;
  left: 41%;
}
.c_animation .nums-2 .num-2 {
  animation: diceshow2 0.2s forwards;
}

.c_animation .nums-3 .num-1 {
  top: 59.1%;
  left: 41%;
}
.c_animation .nums-3 .num-2 {
  left: 59%;
}
.c_animation .nums-3 .num-3 {
  top: 70.6%;
  left: 41%;
  animation: diceshow3 0.2s forwards;
}

@keyframes diceshow2 {
  0% {
    transform: scale(0,0);
  }
  100% {
    transform: scale(1,1);
    top: 68.9%;
    left: 46%;
  }
}

@keyframes diceshow3 {
  0% {
    transform: scale(0,0);
  }
  100% {
    transform: scale(1,1);
    top: 70.6%;
    left: 28%;
  }
}


.c_animation .cup image{
  width: 240px;
  height: 318px;
  position: absolute;
  top: -27%;
  z-index: 10;
  left: 50%;
  transform: translateX(-50%);
  opacity: 0;
}

.c_animation .cup image.cup_animation {
  animation: cup 3s ease-in-out forwards;
}

@keyframes cup {
  0% {
    top: -27%;
    opacity: 0.7;
  }
  25% {
    top: 22%;
    opacity: 1;
  }
  35% {
    top: 22%;
    opacity: 1;
    left: 50%;
  }

  40% {
    top: 22%;
    left: 40%;
    opacity: 1;
  }

  50% {
    top: 22%;
    left: 60%;
    opacity: 1;
  }

  60% {
    top: 22%;
    left: 40%;
    opacity: 1;
  }
  70% {
    top: 22%;
    left: 60%;
    opacity: 1;
  }
  80% {
    top: 22%;
    left: 50%;
    opacity: 1;
  }

  95% {
    top: -27%;
    left: 50%;
    opacity: 0.7;
  }
  100% {
    top: -27%;
    left: 50%;
    opacity: 0;
  }

}


.c_btn {
  margin-top: 45px;
  padding: 13px 92px;
  background: #04A4FE;
box-shadow: 0px 10px 20px rgba(255, 182, 73, 0.2);
border-radius: 83px;
text-align: center;
font-family: "zihun144";
font-style: normal;
font-weight: normal;
font-size: 24px;
line-height: 29px;
color: #FFFFFF;
}

.setdices {
  text-align: center;
  padding: 10px 0;
}

.setdices .dice-set {
  display: inline-block;
  border-radius: 83px;
  width: 40px;
  height: 40px;
  background-color:#04A4FE;

  font-family: "zihun144";
font-style: normal;
font-weight: normal;
font-size: 24px;
line-height: 29px;
color: #FFFFFF;
margin-right: 10px;
opacity: 0.2;
cursor: pointer;
-webkit-tap-highlight-color: transparent;
outline: transparent;
}

.setdices .dice-set.active {
  opacity: 1;
}