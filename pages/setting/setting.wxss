page {
    overflow: hidden;
  }
  .container {
      width: 100%;
      height: 100%;
      background: #F8D7A2;
      overflow: hidden;
    }
    .cont {
        width: 83%;
        height: 83%;
        padding: 39px 8.5% 200px;
        position: absolute;
        top: 9.5%;
        background-color: #ffffff;
        border-top-left-radius: 16px;
        border-top-right-radius: 16px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
      }  
      
.nomal-setting::after,.turn-setting::after {
    width: 110%;
    height: 1px;
    opacity: 0.1;
    content: '';
    position: absolute;
    background: #000000;  
    left: 50%;
    transform: translateX(-50%);
    bottom: -30px;
}

.nomal-setting,.turn-setting,.sport-setting{
    margin-bottom: 60px;
    position: relative;
}



.nomal-setting .title,.turn-setting .title, .sport-setting .title{
    font-size: 20px;
    font-family: "zihun144";
    color: #2A2D32;
    margin-bottom: 20px;
}      
.nomal-setting .voice, .nomal-setting .shake,.turn-setting .turn{
    margin-bottom: 18px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}



.voice .name, .shake .name, .turn .name,.sport .name {
    color: #2A2D32;
opacity: 0.8;
font-size: 16px;
}

.sport>view {
    font-size: 14px;
}

.btnOuter {
    width: 51px;
    height: 31px;
    border-radius: 30px;
    position: relative;
    z-index: 9;
    cursor: pointer;
    -webkit-tap-highlight-color: transparent;
}
 .btnInner {
    width: 27px;
    height: 27px;
    border-radius: 27px;
    background: #FFFFFF;
    position: absolute;
    top: 1px;
    right: 1px;
border: 0.5px solid rgba(0, 0, 0, 0.04);
box-shadow: 0px 3px 8px rgba(0, 0, 0, 0.15), 0px 3px 1px rgba(0, 0, 0, 0.06);
-webkit-tap-highlight-color: transparent;
}


.on {
    background: #FFAE34;
}

.off {
    background: #E5E5E5;
}

.off.btnOuter .btnInner {
    animation: off 0.3s ease-in-out forwards;
}

@keyframes off {
    0%{
        right: 1px;
    }
    100% {
        right: 22px;
    }
}

.on.btnOuter .btnInner {
    animation: on 0.3s ease-in-out forwards;
}

@keyframes on {
    0%{
        right: 22px;
    }
    100% {
        right: 1px;
    }
}

.sport-setting .sport  {
    display: flex;
justify-content: space-between;
}

.sport .tips {
    color: #2A2D32;
opacity: 0.6;
}


.footer {
    display: flex;
    justify-content: space-between;
    height: 96px;
    align-items: center;
}
.footer image {
    width: 108px;
    height: 34px;
}

.footer .copyRight {
    width: 180px;
height: 33px;
color: #000000;
font-size: 10px;
opacity: 0.6;

letter-spacing: -0.3px;
}

.sport {
    margin-bottom: 13px;
}

.btn_circ {
    width: 24px;
    height: 24px;
    opacity: 0.3;
    border: 1.2px solid #000000;
    box-sizing: border-box;
    border-radius: 24px;
    text-align: center;
    margin-right: 10px;
    cursor: pointer;
    -webkit-tap-highlight-color: transparent;
}


.checked {
    border:none;
    opacity: 1;
    background: #FFAE34;
}

.checked>image {
    width: 16px;
    height: 24px;
}

.lists {
    display: flex;
    justify-content: space-between;        
}

.lists>view {
    display: flex;
}